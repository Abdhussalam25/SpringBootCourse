package com.hibernate.HibernateManyToMany;

import java.util.HashSet;
import java.util.Set;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

import com.entities.Course;
import com.entities.Student;

/**
 * Hello world!
 *
 */
public class App 
{
    public static void main( String[] args )
    {
        Set hashSet = new HashSet();
        Transaction tx = null;
        Configuration cfg = new Configuration();
        cfg.configure("hibernate.cfg.xml");       
        SessionFactory sf = cfg.buildSessionFactory();
        Session session = sf.openSession();        
        Student student1 = new Student();
        student1.setStudentId(100);
        student1.setStudentName("Kapil");
        student1.setMarks(78.50f);
        
        Student student2 = new Student();
        student2.setStudentId(200);
        student2.setStudentName("deva");
        student2.setMarks(87.50f);
        
        Course course1 =  new Course();        
        course1.setCourseId(201);
        course1.setCourseName("core-java");
        course1.setDuration(12);
        
        Course course2 =  new Course();        
        course2.setCourseId(301);
        course2.setCourseName("spring framework");
        course2.setDuration(10);
        
        //student1.setCourses(hashSet);
        
        
        
        
        
        
    }
}
