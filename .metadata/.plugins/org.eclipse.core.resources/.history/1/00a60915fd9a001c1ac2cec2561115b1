	private List<Account> addNewAccount(Account account){
		if(account.getBalance() == 0)
			System.out.println("Account not created initial deposit amount is min 5000");
		else {
			accounts.add(account);	
			System.out.println("Account added successfully");
		}
		return accounts;		
	}
	
	private Account depositAmount(String accountName, int accountId, int amount) {
		Account temp = null;
		
		for(Account acc: accounts) {
			if(acc.getAccountName().equals(accountName) && acc.getAccountId() == accountId) {
				acc.depositAmount(amount);
				temp = acc;
				break;
			}
			
		}
		
	return temp;
		
	  	
	}
	
	
	
}
