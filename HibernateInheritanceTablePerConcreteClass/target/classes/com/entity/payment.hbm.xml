<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.Payment" table="payment3">
		<id name="accountId" type="int" column="accountId">
			<generator class="increment" />

		</id>		
		<property name="amount" column="amount" />

		<union-subclass name="com.entity.CreditCard" >			
			<property name="creditCardType" column="creditcardtype" type="string"
				length="15" />
		</union-subclass>
		<union-subclass name="com.entity.DebitCard" >			
			<property name="debitCardType" column="debitcardtype" type="string"
				length="15" />
		</union-subclass>


	</class>

</hibernate-mapping>